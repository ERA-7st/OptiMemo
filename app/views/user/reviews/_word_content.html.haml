%turbo-frame{id: "word_content" }
  - if display == "true"
    =safe_join(word.content.split("\n"),tag(:br))
    = button_to remember_path(word), method: :patch, data: { turbo: false } do
      %i.fas.fa-check-circle
    = button_to ambiguous_path(word), method: :patch, data: { turbo: false } do
      %i.fas.fa-question-circle
    = button_to forget_path(word), method: :patch, data: { turbo: false } do
      %i.fas.fa-times-circle
  - else
    = link_to "確認", confirm_path(word)
