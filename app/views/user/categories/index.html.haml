%br
%h2 カテゴリー一覧
#categories_error
  = render 'layouts/error_message', model: @new_category
= form_with model:@new_category do |f|
  = f.text_field :name
  = f.submit "追加"
%br
%table.table.table-hover.table-striped
  %tbody.table-secondary
    - @categories.each do |category|
      %tr.position-relative
      %th= "#{category.name}(#{category.words.count})"
      %th= button_to "削除", category_path(category), method: :delete